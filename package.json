{
    "private": true,
    "type": "module",
    "name": "monorepo.ts",
    "scripts": {
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "commit": "git add . && node commit.js",
        "check-types": "turbo run check-types",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "dev": "turbo run dev"
    },
    "devDependencies": {
        "axios": "^1.9.0",
        "dotenv": "^16.5.0",
        "node-fetch": "^3.3.2",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "turbo": "^2.5.3"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "engines": {
        "node": ">=18"
    },
    "packageManager": "yarn@1.22.22",
    "workspaces": [
        "source/*",
        "config/*"
    ]
}

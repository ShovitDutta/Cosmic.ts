{
    "private": true,
    "type": "module",
    "version": "0.0.0",
    "license": "UNLICENSED",
    "name": "@cosmic/tailwindcss",
    "sideEffects": [
        "**/*.css"
    ],
    "files": [
        "dist"
    ],
    "exports": {
        "./*": "./dist/*.js",
        "./styles.css": "./dist/index.css"
    },
    "scripts": {
        "lint": "eslint src --max-warnings 0",
        "build": "tailwindcss -i ./styles.css -o ./dist/index.css",
        "dev": "tailwindcss -i ./styles.css -o ./dist/index.css --watch"
    },
    "devDependencies": {
        "@cosmic/tailwind-config": "*",
        "@cosmic/typescript": "*",
        "@tailwindcss/cli": "^4.1.5",
        "@types/react": "^19.1.0",
        "prettier": "^3.3.2",
        "prettier-plugin-tailwindcss": "^0.6.12",
        "tailwindcss": "^4.1.5"
    }
}
